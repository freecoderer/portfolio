---
type Props = { date: Date | string };

const { date: propDate } = Astro.props;
let date = new Date(propDate);

// Ensure 'date' is a valid 'Date' object
if (isNaN(date.getTime())) {
    console.error('Invalid date provided to FormattedDate component');
    date = new Date(); // Fallback to current date or handle as appropriate
}
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        })
    }
</time>